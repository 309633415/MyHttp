<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
  <package name="hibernatecrud" extends="struts-default" namespace="/hibernatecrud" >
	   	<global-results>
			<result name="error">/hibernate/hibernateError.jsp</result>
			<result name="success">/hibernate/hibernateSave.jsp</result>
		</global-results>
     <action name="list" class="demoinfo.hibernate.crud.CrudAction" method="doList" />
     <action name="add" class="demoinfo.hibernate.crud.CrudAction" method="doAdd" />
     <action name="prepareAdd" class="demoinfo.hibernate.crud.CrudAction" method="doPrepareAdd">
		<result name="addUser">/hibernate/hibernateAddUser.jsp</result>
	</action>
	<action name="query" class="demoinfo.hibernate.crud.CrudAction" method="doQuery" />
	<action name="delete" class="demoinfo.hibernate.crud.CrudAction" method="doDelete" />
	<action name="prepareUpdate" class="demoinfo.hibernate.crud.CrudAction" method="doPrepareUpdate">
		<result name="updateUser">/hibernate/hibernateEditUser.jsp</result>
	</action>
	 <action name="update" class="demoinfo.hibernate.crud.CrudAction" method="doUpdate" />
  </package>
</struts>